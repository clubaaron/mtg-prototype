<%- include('globals/head') %>
<main>
    <header class="jumbotron">
      <div class="container">
        <h1 class="display-3">Deck Builder</h1>
        <% if (user.decks) { %>
            <p>You currently have <span><%= user.decks.length %></span> decks</p>
        <% } else { %>
            <p>You don't have any decks.</p>
            <form method="post" action="/deck-builder">
                <button type="submit" class="btn btn-danger">Make New Deck +</button>
            </form>
        <% } %>
      </div>
    </header>

    <%- messages() %>

    <% if (user.decks) { %>
        <div class="container">
            <% user.decks.forEach(function(deck) { %>
                <h4><%= deck.type %> Type Deck</h4>
                <section class="row">
                    <% deck.cards.forEach(function(card) { %>
                        <article class="card" style="width: 20rem;">
                            <div class="card-body">
                              <h4 class="card-title"><%= card.name %></h4>
                              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                            <ul class="list-group list-group-flush">
                              <li class="list-group-item">Cras justo odio</li>
                              <li class="list-group-item">Dapibus ac facilisis in</li>
                              <li class="list-group-item">Vestibulum at eros</li>
                            </ul>
                            <div class="card-body">
                              <a href="#" class="card-link">Card link</a>
                              <a href="#" class="card-link">Another link</a>
                            </div>
                        </article>
                    <% }) %>
                </section>
            <% }); %>
        </div>
    <% } %>

</main>
<%- include('globals/footer') %>
